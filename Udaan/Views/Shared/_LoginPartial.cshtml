@using System.Security.Principal
@using System.Security.Claims

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        var identity = User.Identity as ClaimsIdentity;
        string pref_username = identity.Claims.FirstOrDefault(c => c.Type == "preferred_username")?.Value;
        //string name = identity.Claims.FirstOrDefault(c => c.Type == "name")?.Value;

        <li class="nav-item">
            <span class="navbar-text text-dark">Hello @pref_username</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
    }
</ul>